{
  "extends": ["airbnb-base", "plugin:jest/recommended", "prettier"],
  "plugins": ["import", "jest", "prettier"],
  "rules": {
    "no-param-reassign": 0,
    "class-methods-use-this": 0,
    "no-misleading-character-class": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "no-restricted-syntax": 0,
    "no-await-in-loop": "off"
  },
  "env": {
    "node": true,
    "jest/globals": true
  }
}
